/* ===== Stili di base - Mobile first ===== */

* {
	/* Width comprende anche padding e border */
	box-sizing: border-box;
}
body {
	background: #fff url(../img/unsplash_52b6b4db7397c_1.JPG) no-repeat center center fixed;
	background-size: cover;
	font-family: 'abeezeeregular', sans-serif;
}
header {
	max-width: 90%;
	max-height: 90%;
	padding: 1em;
	position: fixed;
	top: 50%;
	left: 50%;
	text-align: center;
	-webkit-transform: translate(-50%,-50%);
}
h1 {
	position: relative;
	left: 20%;
	color: #2980b9;
	font-size: 3.1em; /* 5em */
	text-transform: uppercase;
	margin: .5em .5em 1em;
	-webkit-animation: scaleIn 1s ease-in-out;
}
h1:after {
	content: '';
	position: absolute;
	bottom: 20%;
	left: -1.5em;
	width: 1em;
	height: .7em;
	border: .1em solid #2980b9;
	border-radius: 0 .3em 0 .3em;
}
h1:before {
	content: '';
	position: absolute;
	top: -10%;
	left: -1.75em;
	width: .5em;
	height: .35em;
	border: .1em solid #2980b9;
	border-radius: 0 .2em 0 .2em;
}
@-webkit-keyframes scaleIn {
	0% { -webkit-transform: scale(100); opacity: 0; }
	100% { -webkit-transform: scale(1); opacity: 1; }
}
p {
	color: #fff;
	font-size: 1em;
	font-weight: 200;
	margin: .5em;
}
.left {
	-webkit-animation: showLeft 2s ease-in-out;
}
@-webkit-keyframes showLeft {
	0% { margin-left: -500em; opacity: 0; }
	100% { margin-left: 0; opacity: 1; }
}
.right {
	-webkit-animation: showRight 3s ease-in-out;
}
@-webkit-keyframes showRight {
	0% { opacity: 0; }
	30% { margin-right: -500em; opacity: 0; }
	100% { margin-right: 0; opacity: 1; }
}
.fade {
	font-size: .7em;
	-webkit-animation: fadeIn 3s ease-in-out;
}
b {
	font-size: 1.5em; /* 3em */
	font-weight: 700;
	text-transform: uppercase;
	/* text-shadow: 0 0 2px 1px #333; */
}
.in_progress {
	font-size: 1.3em; /* 2em */
	font-family: 'ovoregular', Georgia;
	color: #fff;
	margin-top: 5em; /* 4em */
	-webkit-animation: fadeIn 4s ease-in-out 2s;
}
@-webkit-keyframes fadeIn {
	0% { opacity: 0; }
	30% { opacity: 0; }
	100% { opacity: 1; }
}